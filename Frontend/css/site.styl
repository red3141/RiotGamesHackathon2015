html
	height 100%

body
	background-color: rgba(39, 40, 34, 1)
	color #DDD
	display flex
	flex-direction column
	font-family 'Montserrat', sans-serif
	min-height 100%
	padding-top: 82px
	position: relative
	
	@media screen and (max-width: 452px)
		padding-top 124px

	.head
		position absolute
		top 0
		width 100%

		.app-title
			background-color rgba(0, 0, 0, .4)
			box-shadow 0px 19px 54px -4px rgba(0,0,0,0.8);
			font-size 22px
			padding 20px 20px
			text-align center
			text-transform uppercase
			
			@media screen and (max-width: 452px)
				font-size 16px	
			
			span
				color #E58824
				font-size 30px
				
		.menu-bar
			bottom -30px
			padding 10px
			position absolute
			text-align center
			width 100%
			z-index 1000
			
			.option
				color #ddd
				display inline-block
				font-weight bold
				margin 0 10px
				padding 10px
				text-decoration none
				transition all 1s ease
				
				&:hover
					color #E58824
				
	
	#error-page
		display flex
		flex 1
		flex-direction column
		justify-content center
		text-align center

		.error-link
			color white
			margin-top 50px
			text-decoration underline
			display inline-block
			font-size 20px
	
	.background
		background-image url('../images/background.jpg')
		background-position center center
		background-repeat: no-repeat
		background-size cover
		bottom 0
		opacity .7
		pointer-events: none
		position absolute
		top 0
		width 100%
		z-index -1
	
	.general-title
		text-align: center
		padding 0 20px
		text-shadow 0 0 10px black
		
		h1
			color #E58824
			font-weight: 700
			margin-top 0
			text-transform: uppercase
			
			@media screen and (max-width: 400px)
				font-size 26px

		span
			font-size: 1.2em
			font-weight: none
			
	#home-page
		display flex
		flex 1
		flex-direction column

		.internal-body
			align-items center
			display flex
			flex 1
			justify-content center
			flex-direction column

		.form-div
			margin-top 100px
			text-align center
			
			@media screen and (max-width: 768px)
				margin-top 50px
			
			.input-holder
				padding-bottom: 20px

				#summoner-input
					background-color transparent
					border-color: #ddd
					border-style: solid
					border-width: 0 0 1px 0
					color #E58824
					font-size 1.7em
					font-weight bold
					outline: none
					padding 5px 5px 0
					text-align center
					text-transform: uppercase
					
			.custom-btn
				background-color transparent
				border 2px solid white
				border-radius: 50%
				font-size 1.7em
				outline none
				padding 15px
				transition all .5s ease
				
				&:hover
					background-color white
					color rgba(39, 40, 34, 1)
					
			.emptySum-text
				margin-top 20px
				
	#about-page
		margin-top 50px
		
		.name
			@media screen and (max-width: 350px)
				font-size smaller

		.general-title
			margin-top 0px !important

		.row
			padding-bottom 10px !important
			margin-bottom 0px !important
			border-bottom 1px solid rgba(white, .2) !important

		.gt2
			margin-top 30px !important
			
		.suggested-champ
			margin-bottom 30px !important
			
		.r2
			margin-bottom 20px !important
			border-bottom none !important
			
			.paragr
				margin-bottom 20px !important

	#about-page
	#suggestion-page
		flex 1
		display flex
		flex-direction column
		
		@media screen and (max-width: 768px)
			margin-top 35px
		
		.general-title
			margin-bottom 40px
		
		.internal-body
			align-items center
			display flex
			flex 1
			flex-direction column
			justify-content center
			overflow hidden
			
			.row
				width 100%
				margin-bottom 20px
				
				@media screen and (max-width: 768px)
					border-bottom 1px solid rgba(white, .2)
			
				.suggested-champ
					text-align center
					
					@media screen and (max-width: 768px)
						margin-bottom 20px
					
					.role
						margin-bottom 5px
						font-weight bold
						text-transform uppercase
						color #ddd
					
					.img-placeholder
						background-image url('../images/frame.png')
						background-position center
						background-size cover
						border-radius 50%
						box-shadow 0 0 20px #000
						display inline-block
						height 125px
						width 125px
						
						&.tier2
							height 100px
							width 100px
							
						&.tier3
							height 75px
							width 75px
						
						@media screen and (max-width: 768px)
							height 95px !important
							width 95px !important
							
						.img
							background-position: center
							background-size: 120px 120px
							border-radius 50%
							box-shadow inset 0 0 20px 1px #000
							display inline-block
							height 110px
							margin 8px
							width 110px
							background-color black
							
							&.tier2
								background-size 98px 98px
								height 88px
								margin 6px
								width 88px
								
							&.tier3
								background-size 98px 98px
								height 65px
								margin 5px
								width 65px
							
							@media screen and (max-width: 768px)
								background-size: 95px 95px !important
								box-shadow inset 0 0 30px 1px #000 !important
								height 85px !important
								margin 5px !important
								width 85px !important
								
					.name
						color #E58824
						text-transform capitalize
						text-shadow 0 2px 2px black